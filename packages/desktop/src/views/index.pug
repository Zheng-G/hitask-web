doctype html

html
	head
		meta(charset='UTF-8')
		title Hitask Desktop
		if !dev
			link(rel="stylesheet" href="vendors.css")
			link(rel="stylesheet" href="renderer.css")

	body.ui-light-background
		.full-height#reactRoot
			.bootstrap-preload-container
				span(data-loader="ball-fade") &nbsp;
		- var prefix = dev ? `http://${host}:${port}/` : ''
		script(src=prefix + 'vendors.chunk.js')
		script(src=prefix + 'renderer.bundle.js')
